                <small><i>~ Please note, we don't take any responsibility of any damages caused by calling these
                        numbers! ~</i></small>
            </p>
        </div>
    </div>
</section>

<section class="section">
    <table class="table is-stripped">
        <thead>
        <tr>
            <th></th>
            <th>Submitter Username</th>
            <th>Date (D/M/Y H/M/S)</th>
            <th>Comment</th>
            <th>Country</th>
            <th>Code : Number</th>
            <th>Working / Not Working</th>
        </tr>
        </thead>

        <tbody>

        <% if (numberData) { for (let x = 0; x < numberData.length; x++) { %>

        <tr>
            <td></td>
            <td><b><%= numberData[x].SubmitAuthorName %></b></td>
            <td><%= numberData[x].Date %></td>
            <td><b><%= numberData[x].Comment %></b></td>
            <td><%= numberData[x].Country %></td>
            <td><b>+<%= numberData[x].CountryCode %> <%= numberData[x].Number %></b></td>
            <td><%= numberData[x].WorkingCount %> / <%= numberData[x].NotWorkingCount %></td>
        </tr>

        <% } } %>
        </tbody>
    </table>

    <% if (!numberData || numberData.length === 0) { %>
    <div class="notification is-danger has-text-centered">
        <b> ~ Sorry but it appears that no numbers have been found :'( ~ </b>
        <br>
    </div>

    <% } %>
</section>

